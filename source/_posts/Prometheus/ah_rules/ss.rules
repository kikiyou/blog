ALERT node_ss_uptime
  IF node_ss_uptime{job="node"} < 300
  LABELS {severity="warning"}
  ANNOTATIONS {
    summary = "SS 刚才重启了",
    description="ss 服务发生了重启",
  }

ALERT node_ss_ha
  IF node_ss_ha{job="node"} != 0
  LABELS {severity="warning"}
  ANNOTATIONS {
    summary = "ss 异常 当前状态码是 {{ $value }}",
    description="-1: ss 挂掉, 1: ss 同步异常",
  }
